<item fixation>

	/1 = "+"

</item>

<picture SR>

	/erase = True(0,0,0) 

	/halign = center

	/items = SR

	/size = (1500,1500)

</picture>

<shape blank>

	/erase = True(0,0,0)

	/color = (black)

	/size = (3600,3600)

    /shape = rectangle

</shape>


<text fixation>

	/items = fixation

	/select = 1

	/fontstyle = ("Arial", 80ptc)

	/txbgcolor = (0,0,0)

	/txcolor = (255,255,255)

</text>

<values>

	/fixationtime = 0

    /shapetime = 0  

	/stimulustimep = 0

</values>



<expressions>

	/generaterandomfixation = ceil(rand(400,600))
    /generaterandomshape = ceil(rand(100,150))

</expressions>


<trial SR>

	/pretrialpause = 500

	/validresponse = ("Y","N")

	/ontrialbegin = [values.fixationtime = expressions.generaterandomfixation]

	/ontrialbegin = [values.shapetime = values.fixationtime + expressions.generaterandomshape]

	/ontrialbegin = [trial.SR.insertstimulustime(text.fixation, 0)]

	/ontrialbegin = [trial.SR.insertstimulustime(shape.blank,values.fixationtime)]

	/ontrialbegin = [trial.SR.insertstimulustime(picture.SR,values.shapetime)]

	/ontrialend = [trial.SR.clearstimulusframes()]
</trial>


<block startblock1>

	/screencolor = (255,255,255)  

	/preinstructions = (begininstruction2)

</block>

<block startblock2>

	/screencolor = (255,255,255)

	/preinstructions = (begininstruction3)

</block>

<block startblock3>

	/screencolor = (255,255,255)

	/preinstructions = (begininstruction4)

</block>

<block startblock4>

	/screencolor = (255,255,255)

	/preinstructions = (begininstruction5)

</block>

<block startblock5>

	/screencolor = (255,255,255)

	/preinstructions = (begininstruction6)

</block>

<block judgeblock>

	/screencolor = (0,0,0)

	/blockfeedback = (meanlatency,correct)

	/trials = [1-20 = noreplacenorepeat(SR)]

</block>


<block restblock1>

	/screencolor = (255,255,255)

	/postinstructions = (endinstruction1)

</block>

<block restblock2>

	/screencolor = (255,255,255)

	/postinstructions = (endinstruction2)

</block>

<block restblock3>

	/screencolor = (255,255,255)

	/postinstructions = (endinstruction3)

</block>

<block restblock4>

	/screencolor = (255,255,255)

	/postinstructions = (endinstruction4)

</block>


<expt>

	/preinstructions = (begininstruction1)

	/ blocks = [1 = startblock1; 2 = judgeblock; 3 = restblock1; 4 = startblock2; 5 = judgeblock; 6=restblock2; 7=startblock3; 8 = judgeblock; 9 = restblock3; 10 = startblock4; 11 = judgeblock; 12 = restblock4; 13 = startblock5; 14 = judgeblock; ]

	/postinstructions = (endinstruction5)

</expt>

